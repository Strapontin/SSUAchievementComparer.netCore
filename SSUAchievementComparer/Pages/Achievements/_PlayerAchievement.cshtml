@using SSUAchievementComparer.Core.Entities
@model PlayerDetails


<div class="col-sm">
    <h3 class="text-center">@Model.PlayerName (@Model.Achievements.Count())</h3>
    @if (Model.IsProfilePrivate)
    {
        <div>@Html.Raw(Model.PrivateProfileText)</div>
    }
    else
    {
        foreach (var achievement in Model.Achievements.Select(a => a.HtmlDiv))
        {
            <div>@Html.Raw(achievement)</div>
        }
    }
</div>